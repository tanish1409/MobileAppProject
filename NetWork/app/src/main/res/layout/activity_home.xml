<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Filter bar -->
    <HorizontalScrollView
        android:id="@+id/filterBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:elevation="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/sportChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:singleSelection="true"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_soccer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soccer"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_volleyball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volleyball"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_basketball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basketball"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cricket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cricket"
                style="@style/Widget.MaterialComponents.Chip.Filter" />
        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Map frame -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filterBarContainer" />

    <!-- Zoom controls in top-right -->
    <LinearLayout
        android:id="@+id/zoomControls"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/filterBarContainer"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp">

        <ImageButton
            android:id="@+id/zoomInBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/zoom_btn_bg"
            android:src="@drawable/ic_plus"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/zoomOutBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/zoom_btn_bg"
            android:src="@drawable/ic_minus"
            app:tint="@android:color/black" />
    </LinearLayout>

    <!-- Clubs FAB (bottom-right) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabClubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        app:backgroundTint="@color/teal_700"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_list" />

    <!-- Profile FAB (bottom-left) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        app:backgroundTint="@color/teal_700"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_person" />




</RelativeLayout>
